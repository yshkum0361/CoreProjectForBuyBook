@model IEnumerable<BullkyBookModel>
@{
    ViewData["Title"] = "Index";
}




<div class="container p-3">
    <div class="row p-4">
        <div class="col-6">
            <h2 class="text-primary">Category List

            </h2>
        </div>
            <div class="col-6 text-end">
                <a asp-controller="Category" asp-action="Create" class="btn btn-primary text-dark">  
                    <i class="bi bi-plus-circle"></i>&nbsp;Create New Category</a>
            </div>

    </div>
    
</div>

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
               Order Id:
            </th>
            <th>
                Category Name:
            </th>
            <th>
                Display order:
            </th>
            <th></th>
            <th></th>
        </tr>
       
    </thead>

    <tbody>

        @foreach(var obj in Model){
            <tr>
                <td width="20%">
                    @obj.book_Id
                </td>
                <td width="40%">
                    @obj.book_Name
                </td>
                 <td width="40%">
                    @obj.display_Order
                </td>
               <td>
                   <div class="w-75 btn-group" role="group">
                        <a class="btn btn-primary mx-2" asp-controller="Category" asp-action="Edit" asp-route-id="@obj.book_Id"> <i class="bi bi-pencil-square"></i></a>
                   </div>
               </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a class="btn btn-danger mx-2" asp-controller="Category" asp-action="Delete" asp-route-id="@obj.book_Id"><i class="bi bi-trash"></i></a>
                    </div>
                </td>
            </tr>
           
        }
    </tbody>
</table>