@model BullkyBookModel

<form method="post">
    <div asp-validation-summary="All"></div>
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Category</h2>
            <hr />

        </div>
        <div class="mb-3">
            <label asp-for="book_Name"></label>
            <input asp-for="book_Name" class="form-control" />
            <span asp-validation-for="book_Name" class="text-danger"></span>

        </div>
        <div class="mb-3">
            <label asp-for="display_Order"></label>
            <input asp-for="display_Order" class="form-control" />
            <span asp-validation-for="book_Name" class="text-danger"></span>
        </div>
        @*<div class="mb-3">
        <input asp-for="oder_date" class="form-control" />
        <label asp-for="oder_date"></label>

        </div>*@
        <button class="btn btn-primary" type="submit" style="width:40%">Save </button>&nbsp;
        <a asp-controller="Category" asp-action="Index" class="btn btn-secondary" style="width:40%">Show Category</a>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
            }