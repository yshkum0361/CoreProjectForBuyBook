@model BullkyBookModel

<form method="post" asp-action="Delete">
    <input asp-for="book_Id" hidden/>
    
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">DELETE Category</h2>
            <hr />

        </div>
      
        <div class="mb-3">
            <label asp-for="book_Name"></label>
            <input asp-for="book_Name" disabled class="form-control" />
            

        </div>
        <div class="mb-3">
            <label asp-for="display_Order"></label>
            <input asp-for="display_Order" disabled class="form-control" />
           
        </div>
        @*<div class="mb-3">
        <input asp-for="oder_date" class="form-control" />
        <label asp-for="oder_date"></label>
        </div>*@
        <button class="btn btn-danger" type="submit" style="width:40%">Delete </button>&nbsp;
        <a asp-controller="Category" asp-action="Index"  class="btn btn-secondary" style="width:40%">Show Category</a>
    </div>
</form>

